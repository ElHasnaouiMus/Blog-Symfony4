{% extends "base.html.twig" %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="mx-auto">
		<h2>Se Connecter :</h2>

		<form action="{{ path('security_login') }}" method="post">
			<div class="form-group">
			<label>Email :</label>
				<input class="form-control" required type="text" name="_username" placeholder="Email......">
			</div>
			<div class="form-group">
			<label>Password :</label>
				<input class="form-control" required type="password" name="_password" placeholder="Mot de Pass......">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success">Connexion</button>
			</div>
		</form>
	</div>


{% endblock %}

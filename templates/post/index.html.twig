{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
{% for post in posts %}
	<div class="col-sm-7 mt-4 mx-4">
		<row class="row post mb-1">
			<div class="col-12">
				<h2 class="text-capitalize">{{post.Title}}</h2>
				<div class="added">
				<p>
				<a class="username" href="#">
					<span href="#" class="badge badge-info">Ali Alaoui</span>
				</a>
				<p class="small">{{post.createdAt |date("m/d/Y")}}</p>
				</div>
				<p>{{post.body|slice(0, 200)}}...</p>
				<a href="{{path('show', { 'id': post.id } ) }}" class="btn btn-success float-left text-capitalize">Lire La Suite</a>
			</div>
		</row>
	</div>
{% endfor %}
{% endblock %}
